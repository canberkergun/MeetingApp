@model List<UserInfo>
@{
    ViewData["Title"] = "List";
}

<main class="text-center">
    <h1>Meeting Participants List</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Name</td>
                <td>Attending Status</td
            </tr>
        </thead>
        <tbody>

            @{int i = 0;}

            @foreach(var user in Model)
            {
                var state = user.WillAttend == true ? "Yes" : "No";
                var className =user.WillAttend == true ? "table-success" : "table-danger";

                if(user.WillAttend == true)
                {
                    i++;
                }

                <tr class="@className">
                    <td>@user.Name</td>
                    <td>@state</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="/meeting/details/@user.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    
    </table>

    <div class="card">
        <div class="card-body">
            <span>Participant Count: @i</span>
        </div>
    </div>
</main>